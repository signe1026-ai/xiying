<body>
    <div class="container">
        <!-- 标题区域 -->
        <div class="header">
            <h1><i class="fas fa-volume-up"></i> 汉字发音学习</h1>
            <p>点击汉字按钮选择，点击朗读按钮听发音</p>
            <div class="english">Chinese Character Pronunciation - Click characters to select, click speak to listen</div>
        </div>
        
        <!-- 内容区域 -->
        <div class="content">
            <!-- 左侧汉字显示区 -->
            <section class="char-display-section">
                <div class="char-display-area">
                    <div class="big-char" id="current-char">人</div>
                    <div class="pinyin" id="current-pinyin">rén</div>
                    <div class="meaning" id="current-meaning">人类</div>
                    <div class="english-meaning" id="current-english-meaning">Human, Person</div>
                </div>
            </section>
            
            <!-- 右侧汉字选择区 -->
            <section class="char-select-section">
                <h2 class="section-title">选择汉字</h2>
                <div class="section-subtitle">Select Characters</div>
                
                <div class="quick-select-grid" id="quick-select-grid">
                    <!-- 快速选择按钮将通过JavaScript动态生成 -->
                </div>
                
                <div class="voice-controls">
                    <button class="voice-btn" id="voice-btn">
                        <i class="fas fa-volume-up"></i> 朗读汉字
                    </button>
                    <p class="voice-tip">点击上方按钮选择汉字，然后点击朗读按钮听发音</p>
                    <p class="voice-tip-english">Click buttons above to select characters, then click speak to listen to pronunciation</p>
                </div>
            </section>
        </div>
    </div>

    <script>
        // 汉字数据：人，一，二，三，四，生日
        const hanziData = {
            "人": {
                pinyin: "rén",
                meaning: "人类",
                english: "Human, Person"
            },
            "一": {
                pinyin: "yī",
                meaning: "数字一",
                english: "Number One"
            },
            "二": {
                pinyin: "èr",
                meaning: "数字二",
                english: "Number Two"
            },
            "三": {
                pinyin: "sān",
                meaning: "数字三",
                english: "Number Three"
            },
            "四": {
                pinyin: "sì",
                meaning: "数字四",
                english: "Number Four"
            },
            "生": {
                pinyin: "shēng",
                meaning: "生命",
                english: "Life, Birth"
            },
            "日": {
                pinyin: "rì",
                meaning: "太阳",
                english: "Sun, Day"
            },
            "生日": {
                pinyin: "shēng rì",
                meaning: "生日",
                english: "Birthday"
            }
        };
        
        // 当前显示的汉字
        let currentChar = "人";
        
        // 初始化页面
        function initPage() {
            // 显示初始汉字
            updateHanziDisplay(currentChar);
            
            // 初始化快速选择按钮
            initQuickButtons();
            
            // 绑定事件
            bindEvents();
        }
        
        // 初始化快速选择按钮
        function initQuickButtons() {
            const quickSelectGrid = document.getElementById('quick-select-grid');
            quickSelectGrid.innerHTML = '';
            
            const chars = ["人", "一", "二", "三", "四", "生", "日", "生日"];
            
            chars.forEach(char => {
                const buttonContainer = document.createElement('div');
                buttonContainer.className = 'button-container';
                
                const button = document.createElement('button');
                button.className = 'quick-btn';
                if (char === currentChar) {
                    button.classList.add('active');
                }
                button.textContent = char;
                button.dataset.char = char;
                button.addEventListener('click', function() {
                    selectHanzi(char);
                });
                
                const label = document.createElement('div');
                label.className = 'btn-label';
                label.textContent = hanziData[char].pinyin;
                
                const englishLabel = document.createElement('div');
                englishLabel.className = 'btn-english';
                englishLabel.textContent = hanziData[char].english;
                
                buttonContainer.appendChild(button);
                buttonContainer.appendChild(label);
                buttonContainer.appendChild(englishLabel);
                quickSelectGrid.appendChild(buttonContainer);
            });
        }
        
        // 选择汉字
        function selectHanzi(char) {
            currentChar = char;
            updateHanziDisplay(currentChar);
            
            // 更新按钮状态
            const buttons = document.querySelectorAll('.quick-btn');
            buttons.forEach(btn => {
                if (btn.dataset.char === char) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // 自动朗读选中的汉字
            setTimeout(speakHanzi, 300);
        }
        
        // 绑定事件处理函数
        function bindEvents() {
            // 朗读按钮
            document.getElementById('voice-btn').addEventListener('click', speakHanzi);
        }
        
        // 更新汉字显示
        function updateHanziDisplay(char) {
            document.getElementById('current-char').textContent = char;
            
            const data = hanziData[char];
            document.getElementById('current-pinyin').textContent = data.pinyin;
            document.getElementById('current-meaning').textContent = data.meaning;
            document.getElementById('current-english-meaning').textContent = data.english;
        }
        
        // 朗读汉字
        function speakHanzi() {
            if ('speechSynthesis' in window) {
                // 停止当前可能正在播放的语音
                window.speechSynthesis.cancel();
                
                const utterance = new SpeechSynthesisUtterance(currentChar);
                utterance.lang = 'zh-CN';
                utterance.rate = 0.8;
                utterance.pitch = 1.2; // 提高音调，更适合儿童
                utterance.volume = 1.0;
                
                // 添加朗读完成后的回调
                utterance.onend = function() {
                    // 朗读完成后恢复按钮状态
                    document.getElementById('voice-btn').innerHTML = '<i class="fas fa-volume-up"></i> 朗读汉字';
                };
                
                // 朗读前改变按钮状态
                document.getElementById('voice-btn').innerHTML = '<i class="fas fa-volume-up"></i> 朗读中...';
                
                window.speechSynthesis.speak(utterance);
            } else {
                alert('您的浏览器不支持语音朗读功能，请使用Chrome或Edge浏览器。');
            }
        }
        
        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', initPage);
        
        // 添加自动欢迎语音
        window.addEventListener('load', function() {
            setTimeout(function() {
                // 首次加载时自动播放欢迎语音
                if (window.speechSynthesis && window.speechSynthesis.speak) {
                    const utterance = new SpeechSynthesisUtterance("欢迎使用汉字发音学习");
                    utterance.lang = 'zh-CN';
                    utterance.rate = 0.8;
                    utterance.pitch = 1.2;
                    window.speechSynthesis.speak(utterance);
                }
            }, 1500);
        });
    </script>
</body>
</html>
